{
  "private": true,
  "workspaces": [
    "packages/@rcpress/*",
    "packages/docs"
  ],
  "scripts": {
    "bs": "lerna bootstrap",
    "build": "yarn build:docs",
    "build-with-prefix": "cross-env base=/rcpress  yarn build",
    "build:docs": "yarn workspace docs build",
    "cl": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "clean": "lerna clean && rm -rf node_modules",
    "publish": "lerna publish --conventional-commits",
    "start": "yarn workspace docs start"
  },
  "devDependencies": {
    "conventional-changelog-cli": "2.0.23",
    "cross-env": "5.2.0",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "lerna": "^3.11.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "typescript": "3.5.3"
  }
}
